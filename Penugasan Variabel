package pkg100day_ngoding;

public class Day_22 {

    public static void main(String[] args) {
        // Contoh penugasan variabel
        int angka = 5;

        // Menggunakan operator penugasan untuk mengubah nilai variabel
        angka = angka + 3; // Menambah 3 ke nilai variabel angka

        // Menampilkan nilai variabel setelah penugasan
        System.out.println("angka: " + angka);

        // Contoh penugasan dengan operator aritmatika
        int x = 10;
        int y = 5;

        x += y; // Sama dengan x = x + y;
        System.out.println("x setelah ditambahkan y: " + x);

        x -= y; // Sama dengan x = x - y;
        System.out.println("x setelah dikurangi y: " + x);

        x *= y; // Sama dengan x = x * y;
        System.out.println("x setelah dikalikan dengan y: " + x);

        x /= y; // Sama dengan x = x / y;
        System.out.println("x setelah dibagi dengan y: " + x);

        x %= y; // Sama dengan x = x % y;
        System.out.println("Sisa pembagian x dengan y: " + x);
    }
}
